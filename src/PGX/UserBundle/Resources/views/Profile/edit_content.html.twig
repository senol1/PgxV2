{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">E-mail</label>

    <div class="col-sm-10">
        {{ form_widget(form.email, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Nom d'utilisateur</label>

    <div class="col-sm-10">
        {{ form_widget(form.username, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Mot de passe</label>

    <div class="col-sm-10">
        {{ form_widget(form.plainPassword.first, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Vérification</label>

    <div class="col-sm-10">
        {{ form_widget(form.plainPassword.second, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Prénom</label>

    <div class="col-sm-10">
        {{ form_widget(form.prenom, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Nom</label>

    <div class="col-sm-10">
        {{ form_widget(form.nom, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Date de naissance</label>

    <div class="col-sm-10">
        {{ form_widget(form.datenaissance, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Adresse</label>

    <div class="col-sm-10">
        {{ form_widget(form.adresse, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Téléphone mobile</label>

    <div class="col-sm-10">
        {{ form_widget(form.telephonemobile, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Téléphone Fixe</label>

    <div class="col-sm-10">
        {{ form_widget(form.telephonedomicile, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Genre</label>

    <div class="col-sm-10">
        {{ form_widget(form.genre, {'attr':{'class':'form-control'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">CIN</label>

    <div class="col-sm-10">
        {{ form_widget(form.cin, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Image</label>

    <div class="col-sm-10">
        {{ form_widget(form.image, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Statut</label>

    <div class="col-sm-10">
        {{ form_widget(form.statut, {'attr':{'class':'form-control','id':'inputName'}}) }}
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <input class="btn btn-danger" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
    </div>
</div>
{{ form_end(form) }}